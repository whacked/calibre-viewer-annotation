;; https://github.com/jbr/sibilant/pull/99
(macro const (...pairs)
       (as-statement
        ["const " (|> pairs
		      destructure
		      (map (#(pair) [(first pair) " = " (second pair)]))
		      (interleave ",\n    ")) ]))

(macro with-return-var (rtn init ...body)
       (^*scoped-without-return
        `(do
          (var @rtn @init)
          ...@body
          @rtn)))
